;;
;; test-unicode-error.idio
;;

unicode-error0 := Tests

#*

We have a bunch of test cases which should provoke a
^rt-parameter-error.  So we can write a load function which will
wrapper the actual load with a trap for ^rt-parameter-error and
compare the message strings.

*#

unicode-error-load := {
  n := 0

  function (filename msg) {
    if (not (string? filename)) (error 'load "not a string" filename)

    load-k := #n

    n = n + 1
    ;eprintf "loading #%s %s looking for %s\n" n filename msg
    trap (^rt-parameter-error) (function (c) {
				  ;eprintf "unicode-error #%s: %s %s\n" n msg c.location
				  test c.message msg

				  if (not (string=? c.message msg)) {
				    condition-report (append-string "unicode-error-load: " filename) c (current-error-handle)
				  }
				  load-k 'unicode-error
    }) {
      call/cc (function (k) {
		 load-k = k
		 t0 := Tests
		 (symbol-value 'load 'Idio) filename
		 Tests? (t0 + 1)
      })
    }
  }
}

unicode-error-load "unicode-errors/unicode2plane-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"

unicode-error-load "unicode-errors/unicode2plane-codepoint-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"

unicode-error-load "unicode-errors/unicode2integer-bad-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"

unicode-error-load "unicode-errors/unicode-eq-bad-first-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"
unicode-error-load "unicode-errors/unicode-eq-bad-second-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"
unicode-error-load "unicode-errors/unicode-eq-bad-args-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"
unicode-error-load "unicode-errors/unicode-eq-bad-arg-type.idio" "bad parameter type: '#t' a CONSTANT_IDIO is not a unicode"

;; all done?
Tests? (unicode-error0 + 7)
