;;
;; string.idio
;;
string0 = Tests

;; most regular string tests are in s9-tests.idio

;; split
test (split "abc" "b") '("a" "c")
test (split "abc" "a") '("bc")
test (split "abc" "c") '("ab")

test (split "abbc" "b") '("a" "c")
test (split "aabc" "a") '("bc")
test (split "abcc" "c") '("ab")

test (split "abc" "z") '("abc")
test (split "" "z") '("")

;; join
test (join "b" '("a" "c")) "abc"
test (join "b" '("a")) "a"
test (join "" '("a" "c")) "ac"
test (join "b" #n) ""

;; operators
s := "abc"
test (string-ref s 0) #\a
test (s.0) #\a

string-set! s 0 #\x
test (string-ref s 0) #\x
test (s.0) #\x

;; setters
set! s.1 #\y
test (s.1) #\y

s.2 = #\z
test (s.2) #\z

test s "xyz"

;; all done?
test (string0 + 19) Tests
