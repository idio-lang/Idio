;; command.idio
;;

;; How to test external commands?

;; side-effects?

;; tinker with the PATH
OPATH := PATH
PATH = string-append PATH ":" PWD 

monitor (function (cont cond) {
  ;; edisplay* "auto-exit: monitor" cont cond
  test (rt-command-status-error? cond) #t
  if cont {
    if (rt-command-status-error? cond) {
      #t
    } {
      edisplay* "unexpected condition" cond
      raise cont cond
    }
  } {
    edisplay* "unexpected non-continuable condition" cond
    raise cont cond
  }
}) {
  test (auto-exit) '(exit 0)
}

monitor (function (cont cond) {
  ;; edisplay* "auto-exit -e 11: monitor" cont cond
  test (rt-command-status-error? cond) #t
  if cont {
    if (rt-command-status-error? cond) {
      status := command-error-status cond
      test status '(exit 11)

      ;; edisplay* "auto-exit -e 11: monitor" cont cond
      #t
    } {
      edisplay* "unexpected condition" cond
      raise cont cond
    }
  } {
    edisplay* "unexpected non-continuable condition" cond
    raise cont cond
  }
}) {
  test (auto-exit -e 11) '(exit 11)
}

monitor (function (cont cond) {
  ;; edisplay* "auto-exit -k 15: monitor" cont cond
  test (rt-command-status-error? cond) #t
  if cont {
    if (rt-command-status-error? cond) {
      status := command-error-status cond
      test status '(killed 15)

      #t
    } {
      edisplay* "unexpected condition" cond
      raise cont cond
    }
  } {
    edisplay* "unexpected non-continuable condition" cond
    raise cont cond
  }
}) {
  test (auto-exit -k 15) '(killed 15)
}

