# 
# auto-exit -- die deterministically
#

# -e should only apply to read (write?) and broken pipes
set -ue

usage () 
{
    (
	echo "usage: $0 [options]" 
	echo "where options are:" 
	echo "	-i S		stdin is from S" 
	echo "	-o D		stdout is to D" 	
	echo "	-e D		stderr is to D" 	
	echo
	echo "s/D can be:"
	echo "  null		/dev/null"
	echo "  NUM		fd NUM"
    ) >&2
}

opt_input=
opt_output=
opt_error=

while getopts "e:i:o:" opt ; do
    case "${opt}" in
    e)
	opt_error=${OPTARG}
	;;
    i)
	opt_input=${OPTARG}
	;;
    o)
	opt_output=${OPTARG}
	;;
    *)
	usage
	exit 1
	;;
    esac
done

error ()
{
    echo $* >&2
    exit 1
}

typeset -a stdio
lsof_data ()
{
    typeset fd
    typeset file

    while read line ; do
	case "${line}" in
	p$$) ;;
	f[0-2])
	    fd="${line#f}"
	    ;;
	n*)
	    file="${line#n}"
	    stdio[fd]="${file}"
	    ;;
	esac
    done < <(lsof -a -p $$ -d 0-3 -F fn)
}

def_tty=$(tty)
lsof_data

if [[ ${opt_input} ]] ; then
    case "${opt_input}" in
    null) 
	if [[ ${stdio[1]} != /dev/null ]] ; then
	    error "stdin: != /dev/null"
	fi
	;;
    [0-2])
	if [[ ${stdio[1]} != ${stdio[opt_input]} ]] ; then
	    error "stdin: ${stdio[1]} != ${stdio[${out_input}]}"
	fi
	;;
    /*)
	if [[ ! ${stdio[1]} =~ .*${opt_input}$ ]] ; then
	    error "stdin: ${stdio[1]} != .*${opt_input}$"
	fi
	;;
    *)
	read line
	case "$line" in
	"${opt_input}") ;;
	*)
	    error "stdin: $line != ${opt_input}"
	    ;;
	esac
	;;
    esac
fi

if [[ ${opt_output} ]] ; then
    case "${opt_output}" in
    null) 
	if [[ ${stdio[1]} != /dev/null ]] ; then
	    error "stdout: != /dev/null"
	fi
	;;
    [0-2])
	if [[ ${stdio[1]} != ${stdio[opt_output]} ]] ; then
	    error "stdout: ${stdio[1]} != ${stdio[${out_output}]}"
	fi
	;;
    /*)
	if [[ ! ${stdio[1]} =~ .*${opt_output}$ ]] ; then
	    error "stdout: ${stdio[1]} != .*${opt_output}$"
	fi
	;;
    *)
	echo "${opt_output}"
	;;
    esac
fi

if [[ ${opt_error} ]] ; then
    case "${opt_error}" in
    null) 
	if [[ ${stdio[1]} != /dev/null ]] ; then
	    error "stderr: != /dev/null"
	fi
	;;
    [0-2])
	if [[ ${stdio[1]} != ${stdio[opt_error]} ]] ; then
	    error "stderr: ${stdio[1]} != ${stdio[${out_error}]}"
	fi
	;;
    /*)
	if [[ ! ${stdio[1]} =~ .*${opt_error}$ ]] ; then
	    error "stderr: ${stdio[1]} != .*${opt_error}$"
	fi
	;;
    *)
	echo "${opt_output}" >&2
	;;
    esac
fi
